<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<update handle="customer_account"/>
	<body>
		<referenceBlock name="page.main.title"> 
			<action method="setPageTitle"> 
				<argument translate="true" name="title" xsi:type="string">Request for credit</argument> 
			</action> 
	     </referenceBlock> 
		<referenceContainer name="content">
			<block class="Redington\Transactions\Block\Credit\Newcredit" name="credit.newcredit" template="Redington_Transactions::credit/newcredit.phtml"/>
		</referenceContainer>
	</body>
</page>
